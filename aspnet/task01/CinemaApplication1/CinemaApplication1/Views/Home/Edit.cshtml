@model CinemaApplication1.Models.FilmEditView

@{
    ViewBag.Title = "Edit";
}

<hr />

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Filmlər</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<hr />

@if (TempData["success"] != null)
{
    <div class="alert alert-success mt-4" role="alert">
        @TempData["success"]
    </div>
    <hr />    
}


<div class="row">
    <div class="col-md-12">
        <form method="post" action="@Url.Action("Edit","Home", new { id = Model.Film.ID})">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Film.ID" class="form-control" value="@Model.Film.ID" />
            <div class="form-group">
                <label>Adı</label>
                @*@Html.TextBoxFor(m => m.Film.Name)*@
                <input type="text" name="Film.Name" class="form-control" value="@Model.Film.Name" />
            </div>
            <div class="form-group">
                <label>Yayımlanma tarixi</label>
                <input type="date" name="Film.PublicationDate" class="form-control" value="@Model.Film.PublicationDate.Value.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <label>Müddət</label>
                <input type="number" name="Film.Duration" class="form-control" value="@Model.Film.Duration" />
            </div>
            <div class="form-group">
                <label>Youtube linki</label>
                <input type="text" name="Film.Link" class="form-control" value="@Model.Film.Link" />
            </div>
            <div class="form-group">
                <label style="display:block">Ölkələr</label>
                <select name="FilmCounties" required multiple class="form-control select2">
                    @foreach (var country in Model.Countries)
                    {
                        if (Model.Film.FilmCountries.Where(x => x.CountryId == country.ID).Count() > 0)
                        {
                            <option selected="" value="@country.ID">@country.Name</option>
                        }
                        else
                        {
                            <option value="@country.ID">@country.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label style="display:block">Janrlar</label>
                <select name="FilmJanres" required multiple class="form-control select2">
                    @foreach (var janre in Model.Janres)
                    {
                        if (Model.Film.FilmJanres.Where(x => x.JanreId == janre.ID).Count() > 0)
                        {
                            <option selected="" value="@janre.ID">@janre.Name</option>
                        }
                        else
                        {
                            <option value="@janre.ID">@janre.Name</option>
                        }
                    }
                </select>
            </div>

            <hr />
            <input type="submit" class="btn btn-primary" value="yadda saxla" name="_save">
            <input type="submit" class="btn btn-secondary" value="Yadda saxla və redaktə etməyə davam et" name="_continue">
        </form>
    </div>
</div>


