@{
    ViewBag.Title = "Home Page";
}


@section styles {

    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">*@
}


<div class="card text-center mt-4">
    <div class="card-header">
        Cinema Filmleri
    </div>
    <div class="card-body">
        <h5 class="card-title">Filmlər</h5>
        <p class="card-text">Yeni film əlavə etmək üçün aşağıdakı buttona clickləyin</p>
        <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CityAddModal">Şəhər əlavə et</a>
        <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#FilmAddModal">Film əlavə et</a>
        <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#JanrAddModal">Janr əlavə et</a>

    </div>
    <div class="card m-2">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Publication Date</th>
                        <th scope="col">Duration</th>
                        <th scope="col">Link</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>mdo</td>
                        <td>mdo</td>
                        <td><a href="#">Etrafli</a></td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Jacob</td>
                        <td>Thornton</td>
                        <td>fat</td>
                        <td>mdo</td>
                        <td>mdo</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Larry the Bird</td>
                        <td>twitter</td>
                        <td>mdo</td>
                        <td>mdo</td>
                        <td>mdo</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Film Add Modal -->
    <div class="modal fade" id="FilmAddModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Yeni film əlavə et</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-left">
                    <form class="row g-3" action="/" method="post">
                        <div class="col-md-6">
                            <label for="id_name" class="form-label">Filmin adı</label>
                            <input type="text" name="Name" class="form-control" id="id_name">
                        </div>
                        <div class="col-md-6">
                            <label for="id_name" class="form-label">Çıxma tarixi</label>
                            <input type="date" name="PublicationDate" class="form-control" id="id_name">
                        </div>
                        <div class="col-md-12">
                            <label for="id_duration" class="form-label">Filmin müddəti</label>
                            <input type="range" name="Duration" value="1" class="form-range" id="id_duration" min="0" max="5" step="0.5">
                        </div>
                        <div class="col-md-12">
                            <label for="id_link" class="form-label">Filmin linki</label>
                            <input type="text" class="form-control" id="id_link">
                        </div>
                        <div class="col-md-6">
                            <label for="id_countries" class="form-label">Filmin çəkildiyi şəhərlər</label>
                            <select class="form-select" id="id_countries" multiple>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="id_janres" class="form-label">Filmin janrları</label>
                            <select name="" class="form-select" id="id_janres" multiple>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ləğv et</button>
                    <button type="button" class="btn btn-primary">Yadda saxla</button>
                </div>
            </div>
        </div>
    </div>

    <!-- City Add Modal -->
    <div class="modal fade" id="CityAddModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Yeni şəhər əlavə et</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-left">
                    <form class="row g-3" action="/" method="post">
                        <div class="col-md-12">
                            <label for="id_name" class="form-label">Şəhərin adı</label>
                            <input type="text" name="Name" class="form-control" id="id_city">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ləğv et</button>
                    <button type="button" class="btn btn-primary">Yadda saxla</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Janr Add Modal -->
    <div class="modal fade" id="JanrAddModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Yeni janr əlavə et</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-left">
                    <form class="row g-3" action="/" method="post">
                        <div class="col-md-12">
                            <label for="id_name" class="form-label">Janrın adı</label>
                            <input type="text" name="Name" class="form-control" id="id_city">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ləğv et</button>
                    <button type="button" class="btn btn-primary">Yadda saxla</button>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
}